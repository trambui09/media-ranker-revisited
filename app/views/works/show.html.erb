<section>
  <h3><%= @work.title %></h3>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>
  <section>
    <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
    <%= link_to "Upvote", upvote_path(@work), class: "btn btn-primary", method: :post %>
    <%= link_to "Delete", work_path(@work), class: "btn btn-danger", method: "delete", data: { confirm: "Are you sure?" } %>
  </section>
</section>

<section>
  <h3><%= @votes.count %> Votes for this <%= @media_category.capitalize.singularize %></h3>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.user.username, user_path(vote.user) %></td>
        <td><%= render_date vote.created_at %></td>
      </li>
    <% end %>
  </ul>
</section>
